@model Vidly.Models.MovieFormViewModel
@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>New Movie</h1>

@using (Html.BeginForm("Save", "Movies"))
{
    <div>
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control col-4" })
    </div>

    <div>
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0: dd MMM, yyyy}", new { @class = "form-control col-4" })
    </div>

    <div>
        @Html.LabelFor(m=>m.Movie.GenreId)
        @Html.DropDownListFor(
            m=>m.Movie.GenreId,
            new SelectList(Model.Genres,"Id", "Name"),
            "Select Movie Genre",
            new { @class = "form-control col-4" })
    </div>

    <div>
        @Html.LabelFor(m=>m.Movie.NumberInStock)
        @Html.TextBoxFor(m=>m.Movie.NumberInStock, new { @class = "form-control col-4" })
    </div>

    @Html.HiddenFor(m => m.Movie.Id)

    <button type="submit" class="btn btn-primary m-2">SAVE</button>
}