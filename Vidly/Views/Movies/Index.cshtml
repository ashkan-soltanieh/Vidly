@model IEnumerable<Vidly.Domain.Movie>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movies</h1>

<button type="submit" class="btn btn-primary ">NEW MOVIE</button>

@if (!Model.Any())
{
    <text>We don't have any movies yet.</text>
}

else
{
    <table class="table table-bordered table-hover m-2">
        <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>
                        <a href="/movies/details/@movie.Id">@movie.Name</a>
                    </td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
}