@model IEnumerable<Vidly.Domain.Movie>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movies</h1>

@Html.ActionLink(
    "ADD MOVIE", 
    "New", 
    "Movies", 
    null, 
    new { @class = "btn btn-primary" })

@if (!Model.Any())
{
    <text>We don't have any movies yet.</text>
}

else
{
    <table class="table table-bordered table-hover m-2">
        <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(
                            movie.Name,
                            "Edit",
                            "Movies", 
                            new{id=movie.Id}, 
                            null)
                    </td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
}